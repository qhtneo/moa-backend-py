import socket

# 서버의 주소. hostname 또는 ip address를 사용가능함
HOST = '127.0.0.1'
# 서버에서 지정해 놓은 포트 번호
PORT = 9700

# 소켓 객체를 생성합니다.
# 주소체계로 IPv4(AF_INET), 소켓타입으로 TCP(SOCK_STREAM) 사용
client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

# 지정한 HOST 와 PORT를 사용하여 서버에 접속
client_socket.connect((HOST, PORT))

# 메시지를 전송합니다
client_socket.sendall('서버로 보내기!!'.encode())

# 메시지를 수신합니다.
data = client_socket.recv(1204)
print('received', repr(data.decode()))

# 소켓을 닫음
client_socket.close()